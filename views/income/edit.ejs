<body class="main-bg">
    <div class="center-container">
        <div class="edit-form-container">
            <form class="edit-form" action="/income/edit/<%=income._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" value="<%=income.name%>" name="name">
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <input type="text" value="<%=income.description%>" name="description">
                </div>
                <div class="form-group">
                    <label for="price">Amount:</label>
                    <input type="text" value="<%=income.price%>" name="price">
                </div>
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="text" value="<%=income.date%>" name="date">
                </div>
                <div class="button-container">
                    <button type="submit" class="update-button">Update</button>
                </div>
            </form>
            <form action="/income/<%=income._id%>?_method=DELETE" method="POST" class="delete-form">
                <div class="button-container">
                    <button type="submit" class="delete-button">Delete</button>
                </div>
            </form>
        </div>
    </div>
</body>