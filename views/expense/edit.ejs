<body class="main-bg">


<div class="center-container">
    <div class="edit-form-container">
        <form class="edit-form" action="/expense/edit/<%=expense._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" value="<%=expense.name%>" name="name">
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <input type="text" value="<%=expense.description%>" name="description">
            </div>
            <div class="form-group">
                <label for="price">Amount:</label>
                <input type="text" value="<%=expense.price%>" name="price">
            </div>
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="text" value="<%=expense.date%>" name="date">
            </div>
            <!-- <button type="submit" class="update-button">Update</button> -->
            <div class="button-container">
                <button type="submit" class="update-button">Update</button>
                <a href="/expense/<%=expense._id%>?_method=DELETE" class="delete-button">Delete</a>
            </div>
        </form>
    </div>

   
</div>

</body>
